<div class="hero-section bg-primary text-white py-5">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="display-4 fw-bold">We Can Trust</h1>
        <p class="lead">Making a difference in the world, one donation at a time. Your contribution helps us build a better tomorrow for those in need.</p>
        <div class="mt-4">
          <a href="/donate" class="btn btn-success btn-lg me-3">
            <i class="fas fa-heart"></i> Donate Now
          </a>
          <% if (!user) { %>
            <a href="/signup" class="btn btn-outline-light btn-lg">
              <i class="fas fa-user-plus"></i> Join Us
            </a>
          <% } %>
        </div>
      </div>
      <div class="col-md-4 text-center">
        <i class="fas fa-hands-helping fa-5x opacity-75"></i>
      </div>
    </div>
  </div>
</div>

<div class="container py-5">
  <div class="row">
    <div class="col-md-4 text-center mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <i class="fas fa-graduation-cap fa-3x text-primary mb-3"></i>
          <h5 class="card-title">Education</h5>
          <p class="card-text">Supporting education initiatives to empower communities and create opportunities for growth.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 text-center mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <i class="fas fa-heartbeat fa-3x text-danger mb-3"></i>
          <h5 class="card-title">Healthcare</h5>
          <p class="card-text">Providing essential healthcare services and medical support to underserved populations.</p>
        </div>
      </div>
    </div>
    <div class="col-md-4 text-center mb-4">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <i class="fas fa-utensils fa-3x text-warning mb-3"></i>
          <h5 class="card-title">Food & Nutrition</h5>
          <p class="card-text">Fighting hunger and malnutrition by providing meals and nutrition programs.</p>
        </div>
      </div>
    </div>
  </div>
  
  <div class="text-center mt-5">
    <h3 class="mb-4">Ready to Make a Difference?</h3>
    <a href="/donate" class="btn btn-primary btn-lg">
      <i class="fas fa-donate"></i> Start Your Donation
    </a>
  </div>
  
  <% if (!user) { %>
    <div class="row justify-content-center mt-5">
      <div class="col-md-6 text-center">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">Join Our Community</h5>
            <p class="card-text">Sign up to track your donations and stay updated on our impact.</p>
            <a href="/auth/google" class="btn btn-outline-primary">
              <img src="https://developers.google.com/identity/images/btn_google_signin_dark_normal_web.png" alt="Sign in with Google" style="height: 40px;">
            </a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>
