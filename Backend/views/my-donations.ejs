<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-history"></i> My Donations</h2>
        <a href="/donate" class="btn btn-success">
          <i class="fas fa-plus"></i> Make Another Donation
        </a>
      </div>
      
      <% if (donations && donations.length > 0) { %>
        <div class="card shadow">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-primary">
                  <tr>
                    <th>Date</th>
                    <th>Amount</th>
                    <th>Purpose</th>
                    <th>Payment ID</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% donations.forEach(donation => { %>
                    <tr>
                      <td>
                        <small><%= new Date(donation.createdAt).toLocaleDateString('en-IN') %></small><br>
                        <small class="text-muted"><%= new Date(donation.createdAt).toLocaleTimeString('en-IN') %></small>
                      </td>
                      <td>
                        <strong>₹<%= donation.amount %></strong>
                      </td>
                      <td>
                        <span class="badge bg-info"><%= donation.purpose %></span>
                      </td>
                      <td>
                        <small class="font-monospace"><%= donation.razorpayPaymentId %></small>
                      </td>
                      <td>
                        <span class="badge bg-success">
                          <i class="fas fa-check"></i> Completed
                        </span>
                      </td>
                      <td>
                        <a href="/donation-success/<%= donation._id %>" class="btn btn-sm btn-outline-primary">
                          <i class="fas fa-receipt"></i> View Receipt
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        
        <div class="mt-4 text-center">
          <div class="card bg-light">
            <div class="card-body">
              <h5 class="card-title text-success">
                <i class="fas fa-heart"></i> Thank You for Your Generosity!
              </h5>
              <p class="card-text">
                Total Donated: <strong>₹<%= donations.reduce((sum, d) => sum + d.amount, 0) %></strong><br>
                Number of Donations: <strong><%= donations.length %></strong>
              </p>
              <p class="text-muted">
                Your contributions are making a real difference in people's lives.
              </p>
            </div>
          </div>
        </div>
        
      <% } else { %>
        <div class="card shadow">
          <div class="card-body text-center py-5">
            <i class="fas fa-donate fa-4x text-muted mb-4"></i>
            <h4>No Donations Yet</h4>
            <p class="text-muted mb-4">You haven't made any donations yet. Start making a difference today!</p>
            <a href="/donate" class="btn btn-success btn-lg">
              <i class="fas fa-heart"></i> Make Your First Donation
            </a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</div>
